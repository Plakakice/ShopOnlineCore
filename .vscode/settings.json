{
    // Live Server (if used for static html elsewhere)
    "liveServer.settings.port": 5501,

    // Optional: add a status bar button (requires "anweber.vscode-statusbar-commands" extension)
    // It runs the VS Code task labeled "Run Web Server" we created.
    "statusbar.commands": [
        {
            "text": "$(play) Go Live .NET",
            "command": "workbench.action.tasks.runTask",
            "arguments": ["Run Web Server"],
            "alignment": "right",
            "priority": 100
        }
    ]
}