@model ShopOnlineCore.Models.Category

@{
    ViewData["Title"] = "Xóa Danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Xóa Danh mục</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card shadow mb-4 border-left-danger">
    <div class="card-body">
        <h3 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này?</h3>
        <p class="text-muted">Lưu ý: Các sản phẩm thuộc danh mục này sẽ bị mất liên kết danh mục.</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Tên danh mục
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </form>
    </div>
</div>
