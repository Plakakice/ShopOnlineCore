@using ShopOnlineCore.Models
@model List<Order>

@{
    ViewData["Title"] = "Chi tiết Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var customerName = ViewData["CustomerName"]?.ToString() ?? "";
    var email = ViewData["Email"]?.ToString() ?? "";
    var phoneNumber = ViewData["PhoneNumber"]?.ToString() ?? "";
    var address = ViewData["Address"]?.ToString() ?? "";
    var orderCount = (int)(ViewData["OrderCount"] ?? 0);
    var totalSpent = (decimal)(ViewData["TotalSpent"] ?? 0);
}

<div class="page-head_agile_info_w3l">
    <div class="container">
        <h3><i class="fa fa-user-o"></i> Chi tiết <span>Khách hàng</span></h3>
    </div>
</div>

<div class="container" style="margin-top: 30px; margin-bottom: 50px;">
    
    <!-- Thông tin khách hàng -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 style="margin: 0;"><i class="fa fa-user-circle"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Tên khách hàng:</label>
                                <p>@customerName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Email:</label>
                                <p><a href="mailto:@email">@email</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Số điện thoại:</label>
                                <p>@(phoneNumber ?? "Không cập nhật")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Địa chỉ:</label>
                                <p>@address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê -->
        <div class="col-md-4">
            <div class="card mb-3" style="border-left: 4px solid #3498db;">
                <div class="card-body text-center">
                    <h3 style="color: #3498db; margin: 0;">@orderCount</h3>
                    <p style="margin: 10px 0 0 0; color: #7f8c8d;">Đơn hàng</p>
                </div>
            </div>
            <div class="card" style="border-left: 4px solid #27ae60;">
                <div class="card-body text-center">
                    <h3 style="color: #27ae60; margin: 0;">@totalSpent.ToString("N0")₫</h3>
                    <p style="margin: 10px 0 0 0; color: #7f8c8d;">Tổng chi tiêu</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách đơn hàng -->
    @if (Model.Count > 0)
    {
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 style="margin: 0;"><i class="fa fa-shopping-cart"></i> Đơn hàng (@orderCount)</h5>
            </div>
            <div class="card-body" style="padding: 0;">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead style="background: #000000; color: white;">
                            <tr>
                                <th>ID</th>
                                <th>Ngày đặt</th>
                                <th>Số mặt hàng</th>
                                <th>Trạng thái</th>
                                <th>Tổng tiền</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderByDescending(o => o.CreatedDate))
                            {
                                <tr>
                                    <td><strong>#@order.Id</strong></td>
                                    <td>@order.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge badge-info">@order.OrderItems.Sum(oi => oi.Quantity)</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusColor = order.Status switch
                                            {
                                                "Pending" => "warning",
                                                "Processing" => "info",
                                                "Shipped" => "primary",
                                                "Delivered" => "success",
                                                "Cancelled" => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge badge-@statusColor">
                                            @(order.Status switch
                                            {
                                                "Pending" => "Chờ xử lý",
                                                "Processing" => "Đang xử lý",
                                                "Shipped" => "Đã gửi",
                                                "Delivered" => "Đã giao",
                                                "Cancelled" => "Đã hủy",
                                                _ => order.Status
                                            })
                                        </span>
                                    </td>
                                    <td><strong>@order.Total.ToString("N0")₫</strong></td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-info" title="Xem chi tiết">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fa fa-info-circle"></i> Khách hàng này không có đơn hàng nào.
        </div>
    }

    <!-- Nút quay lại -->
    <div class="mt-4">
        <a asp-area="Admin" asp-controller="Users" asp-action="Customers" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
