@page
@model LoginModel

@{
    ViewData["Title"] = "\u0110\u0103ng nh\u1EADp";
}

<section class="account-page py-5">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-lg-5 col-md-6">
                <div class="account-card">
                    <h2 class="account-title">@ViewData["Title"]</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">M&#7853;t kh&#7849;u</label>
                            <div style="position: relative; display: flex; align-items: center;">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" id="loginPassword" style="padding-right: 45px; width: 100%;" />
                                <span style="position: absolute; right: 12px; cursor: pointer; color: #6c757d; font-size: 18px; user-select: none;" onclick="togglePassword('loginPassword', this)">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">&#272;&#259;ng nh&#7853;p</button>

                        <div class="account-links mt-3">
                            <a id="forgot-password" asp-page="./ForgotPassword">Qu&ecirc;n m&#7853;t kh&#7849;u?</a>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">T&#7841;o t&agrave;i kho&#7843;n m&#7899;i</a>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">G&#7917;i l&#7841;i email k&#237;ch ho&#7841;t</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="account-card account-card-alt">
                    <h3 class="account-title">&#272;&#259;ng nh&#7853;p b&#7857;ng d&#7883;ch v&#7909; kh&#225;c</h3>
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="account-note">Ch&#432;a c&#7845;u h&igrave;nh d&#7883;ch v&#7909; &#273;&#259;ng nh&#7853;p b&ecirc;n th&#7913; ba.</p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-light" name="provider" value="@provider.Name" title="&#272;&#259;ng nh&#7853;p b&#7857;ng @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconElement) {
            const input = document.getElementById(inputId);
            const icon = iconElement.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fa fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fa fa-eye';
            }
        }
    </script>
}
