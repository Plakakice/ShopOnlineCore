@page
@using Microsoft.AspNetCore.Identity
@using ShopOnlineCore.Models.Identity
@inject UserManager<ApplicationUser> UserManager
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var user = await UserManager.GetUserAsync(User);
}

<style>
    .profile-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        padding: 30px;
        border: 1px solid #eaeaea;
        margin-bottom: 30px;
    }
    .info-group {
        margin-bottom: 20px;
    }
    .info-group label {
        font-weight: 700;
        color: #333;
        font-size: 0.9em;
        margin-bottom: 5px;
        display: block;
    }
    .info-group p {
        color: #555;
        margin: 0;
        font-size: 1em;
    }
    .stats-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        border-left: 4px solid;
        text-align: center;
        margin-bottom: 20px;
    }
    .stats-card h3 {
        margin: 0;
        color: #333;
        font-size: 1.8em;
        font-weight: 700;
    }
    .stats-card p {
        margin: 8px 0 0 0;
        color: #999;
        font-size: 0.9em;
    }
    .badge-custom {
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85em;
        display: inline-block;
    }
    .badge-confirmed { background: #d4edda; color: #155724; }
    .badge-unconfirmed { background: #fff3cd; color: #856404; }
    .badge-active { background: #d4edda; color: #155724; }
    .badge-locked { background: #f8d7da; color: #721c24; }
    
    .table-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    .table-card thead {
        background: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
    }
    .table-card th {
        font-weight: 700;
        color: #333;
        padding: 15px;
        border: none;
        font-size: 0.9em;
        text-transform: uppercase;
    }
    .table-card td {
        padding: 15px;
        vertical-align: middle;
        color: #555;
        border-bottom: 1px solid #f0f0f0;
    }
    .order-id {
        font-weight: 700;
        color: #2fdab8;
    }
    .order-total {
        font-weight: 700;
        color: #e74c3c;
    }
</style>

<partial name="_StatusMessage" for="StatusMessage" />

<!-- View Mode -->
<div id="view-mode">
    <div class="row">
        <!-- User Info -->
        <div class="col-md-8">
            <div class="profile-card">
                <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                    <h3 style="margin: 0; color: #2fdab8; font-weight: 700;"><i class="fa fa-user-circle"></i> Thông tin người dùng</h3>
                    <button onclick="toggleEditMode()" class="btn btn-primary">
                        <i class="fa fa-edit"></i> Thay đổi thông tin
                    </button>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-group">
                            <label>ID:</label>
                            <p style="font-family: monospace; font-size: 0.9em;">@user.Id</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-group">
                            <label>Tên người dùng:</label>
                            <p style="font-weight: 600; color: #2fdab8;">@user.UserName</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-group">
                            <label>Email:</label>
                            <p>@user.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-group">
                            <label>Số điện thoại:</label>
                            <p>@(user.PhoneNumber ?? "Chưa cập nhật")</p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                         <div class="info-group">
                            <label>Họ và tên:</label>
                            <p>@(user.FullName ?? "Chưa cập nhật")</p>
                        </div>
                    </div>
                     <div class="col-md-12">
                         <div class="info-group">
                            <label>Địa chỉ:</label>
                            <p>@(user.Address ?? "Chưa cập nhật")</p>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="info-group">
                            <label>Trạng thái Email:</label>
                            @if (user.EmailConfirmed)
                            {
                                <span class="badge-custom badge-confirmed"><i class="fa fa-check-circle"></i> Đã xác nhận</span>
                            }
                            else
                            {
                                <span class="badge-custom badge-unconfirmed"><i class="fa fa-times-circle"></i> Chưa xác nhận</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-group">
                            <label>Trạng thái Tài khoản:</label>
                            @if (user.LockoutEnabled && user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.UtcNow)
                            {
                                <span class="badge-custom badge-locked"><i class="fa fa-lock"></i> Bị khóa</span>
                            }
                            else
                            {
                                <span class="badge-custom badge-active"><i class="fa fa-check-circle"></i> Hoạt động</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats -->
        <div class="col-md-4">
            <div class="stats-card" style="border-left-color: #3498db;">
                <p>Tổng đơn hàng</p>
                <h3>@Model.Orders.Count</h3>
            </div>
            <div class="stats-card" style="border-left-color: #27ae60;">
                <p>Tổng chi tiêu</p>
                <h3 style="font-size: 1.5em;">@Model.Orders.Sum(o => o.Total).ToString("N0")₫</h3>
            </div>
        </div>
    </div>

    <!-- Order History -->
    <div class="row">
        <div class="col-md-12">
            <div class="profile-card p-0 overflow-hidden">
                <div class="p-4 border-bottom bg-light">
                    <h3 style="margin: 0; color: #2fdab8; font-weight: 700; font-size: 1.3em;">
                        <i class="fa fa-shopping-cart"></i> Lịch sử đặt hàng
                    </h3>
                </div>
                
                @if (Model.Orders.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Địa chỉ</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td><span class="order-id">#@order.Id</span></td>
                                        <td>@order.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@order.Address</td>
                                        <td>
                                            @{
                                                var badgeClass = order.Status switch
                                                {
                                                    "Pending" => "badge-unconfirmed",
                                                    "Processing" => "style='background: #d1ecf1; color: #0c5460;'",
                                                    "Shipped" => "style='background: #cce5ff; color: #004085;'",
                                                    "Delivered" => "badge-confirmed",
                                                    "Cancelled" => "badge-locked",
                                                    _ => "style='background: #e9ecef; color: #383d41;'"
                                                };
                                                var displayStatus = order.Status switch
                                                {
                                                    "Pending" => "Chờ xử lý",
                                                    "Processing" => "Đang xử lý",
                                                    "Shipped" => "Đã gửi",
                                                    "Delivered" => "Đã giao",
                                                    "Cancelled" => "Đã hủy",
                                                    _ => order.Status
                                                };
                                            }
                                            <span class="badge-custom" @Html.Raw(badgeClass)>@displayStatus</span>
                                        </td>
                                        <td><span class="order-total">@order.Total.ToString("N0")₫</span></td>
                                        <td>
                                            <a href="@Url.Action("Details", "Checkout", new { area = "", id = order.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fa fa-eye"></i> Xem
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-5 text-center text-muted">
                        <i class="fa fa-shopping-bag mb-3" style="font-size: 2em;"></i>
                        <p>Bạn chưa có đơn hàng nào.</p>
                        <a href="/" class="btn btn-outline-primary mt-2">Mua sắm ngay</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Edit Mode (Hidden by default) -->
<div id="edit-mode" style="display: none;">
    <div class="profile-card">
        <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
            <h3 style="margin: 0; color: #2fdab8; font-weight: 700;">Cập nhật thông tin</h3>
            <button onclick="toggleEditMode()" class="btn btn-outline-secondary">
                <i class="fa fa-times"></i> Hủy bỏ
            </button>
        </div>

        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-3">
                    <label asp-for="Input.FullName" class="form-label">Họ và tên</label>
                    <input asp-for="Input.FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-4">
                    <label asp-for="Input.Address" class="form-label">Địa chỉ</label>
                    <input asp-for="Input.Address" class="form-control" placeholder="Nhập địa chỉ giao hàng" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button type="button" onclick="toggleEditMode()" class="btn btn-secondary me-2">Hủy</button>
                <button id="update-profile-button" type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleEditMode() {
            var viewMode = document.getElementById('view-mode');
            var editMode = document.getElementById('edit-mode');
            
            if (viewMode.style.display === 'none') {
                viewMode.style.display = 'block';
                editMode.style.display = 'none';
            } else {
                viewMode.style.display = 'none';
                editMode.style.display = 'block';
            }
        }
    </script>
}
