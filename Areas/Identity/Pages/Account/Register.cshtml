@page
@model RegisterModel

@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    .account-page {
        background-color: #f8f9fa;
        min-height: 80vh;
        display: flex;
        align-items: center;
    }
    .account-card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        padding: 40px;
        border: 1px solid #eaeaea;
        height: 100%;
    }
    .account-card-alt {
        background: linear-gradient(135deg, #2fdab8 0%, #1b9c83 100%);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
    .account-title {
        font-weight: 700;
        color: #333;
        margin-bottom: 30px;
        font-size: 1.8rem;
        text-align: center;
    }
    .account-card-alt .account-title {
        color: white;
    }
    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #ddd;
        background-color: #fcfcfc;
    }
    .form-control:focus {
        border-color: #2fdab8;
        box-shadow: 0 0 0 0.2rem rgba(47, 218, 184, 0.25);
    }
    .btn-primary {
        background-color: #2fdab8;
        border-color: #2fdab8;
        border-radius: 8px;
        padding: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
    }
    .btn-primary:hover {
        background-color: #1b9c83;
        border-color: #1b9c83;
        transform: translateY(-2px);
    }
    .btn-google {
        background-color: white;
        color: #333;
        border-radius: 8px;
        padding: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s;
        width: 100%;
        border: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .btn-google:hover {
        background-color: #f1f1f1;
        transform: translateY(-2px);
        color: #333;
    }
    .account-links {
        text-align: center;
        margin-top: 20px;
    }
    .account-links a {
        color: #2fdab8;
        text-decoration: none;
        font-weight: 500;
        display: block;
        margin-bottom: 10px;
    }
    .account-links a:hover {
        text-decoration: underline;
        color: #1b9c83;
    }
</style>

<section class="account-page">
    <div class="container">
        <div class="row g-0 justify-content-center">
            <!-- Left Side: Register Form -->
            <div class="col-lg-5 col-md-6">
                <div class="account-card" style="border-top-right-radius: 0; border-bottom-right-radius: 0;">
                    <h2 class="account-title">Đăng ký</h2>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <div style="position: relative;">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" id="registerPassword" placeholder="Nhập mật khẩu" style="padding-right: 45px;" />
                                <span style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #999;" onclick="togglePassword('registerPassword', this)">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <div style="position: relative;">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" id="confirmPassword" placeholder="Nhập lại mật khẩu" style="padding-right: 45px;" />
                                <span style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #999;" onclick="togglePassword('confirmPassword', this)">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Đăng ký</button>

                        <div class="account-links">
                            <span style="color: #666;">Đã có tài khoản?</span>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="display: inline; margin-left: 5px;">Đăng nhập ngay</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Right Side: External Login -->
            <div class="col-lg-4 col-md-6">
                <div class="account-card account-card-alt" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                    <h3 class="account-title">Hoặc đăng ký bằng</h3>
                    <p style="margin-bottom: 30px; opacity: 0.9;">Liên kết tài khoản mạng xã hội để đăng ký nhanh chóng.</p>
                    
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p class="account-note">Chưa cấu hình dịch vụ đăng nhập bên thứ ba.</p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-100 px-4">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                @if (provider.Name == "Google")
                                {
                                    <button type="submit" class="btn btn-google mb-3" name="provider" value="@provider.Name" title="Đăng ký bằng @provider.DisplayName">
                                        <img src="~/images/Logo-google-icon-PNG.png" alt="Google" style="width: 20px; height: 20px;" />
                                        <span>Đăng ký bằng Google</span>
                                    </button>
                                }
                                else if (provider.Name == "Facebook")
                                {
                                    <button type="submit" class="btn btn-google mb-3" name="provider" value="@provider.Name" title="Đăng ký bằng @provider.DisplayName">
                                        <i class="fa fa-facebook" style="color: #4267B2; font-size: 1.2em;"></i>
                                        <span>Đăng ký bằng Facebook</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-light w-100 mb-3" name="provider" value="@provider.Name" title="Đăng ký bằng @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            }
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, iconElement) {
            const input = document.getElementById(inputId);
            const icon = iconElement.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fa fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fa fa-eye';
            }
        }
    </script>
}
