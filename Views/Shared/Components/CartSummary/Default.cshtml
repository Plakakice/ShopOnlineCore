@model int

<a asp-area="" asp-controller="Cart" asp-action="Index" class="cart-summary-link">
    <div class="cart-icon-wrapper">
        <i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
        @if (Model > 0)
        {
            <span class="cart-badge">@Model</span>
        }
    </div>
    <span>Giỏ hàng</span>
</a>